<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/IvReceivedCapsule"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/pink_capsule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="-20dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="A letter to my self"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/IvReceivedCapsule"
        app:layout_constraintEnd_toEndOf="@+id/IvReceivedCapsule"
        app:layout_constraintStart_toStartOf="@+id/IvReceivedCapsule" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="67dp"
        android:layout_height="72dp"
        android:contentDescription="TODO"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/IvReceivedCapsule"
        app:layout_constraintEnd_toEndOf="@+id/IvReceivedCapsule"
        app:layout_constraintStart_toStartOf="@+id/IvReceivedCapsule"
        app:layout_constraintTop_toTopOf="@+id/IvReceivedCapsule"
        app:srcCompat="@drawable/unlocked_pad" />

    <ImageView
        android:id="@+id/deleteCapsuleBtn"
        android:layout_width="47dp"
        android:layout_height="53dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/IvReceivedCapsule"
        app:layout_constraintTop_toTopOf="@+id/IvReceivedCapsule"
        app:srcCompat="@drawable/delete_btn" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="143dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/IvReceivedCapsule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/time_platform" />

    <TextView
        android:id="@+id/tvOpenTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/poppins"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>